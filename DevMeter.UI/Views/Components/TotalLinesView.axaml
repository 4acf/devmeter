<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DevMeter.UI.Views.Components.TotalLinesView"
			 xmlns:vm="using:DevMeter.UI.ViewModels"
			 x:DataType="vm:TotalLinesViewModel"
			 Background="Transparent">
	
	<Border Background="#202123" CornerRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center">
		<Grid RowDefinitions="Auto, Auto, Auto" Width="270" Margin="15" HorizontalAlignment="Left">
			<TextBlock Grid.Row="0" Classes="h4">Total Lines</TextBlock>
			<TextBlock Grid.Row="1" Classes="h1" Text="{Binding TotalLines}"></TextBlock>
			<TextBlock Grid.Row="2" Classes="h4" Text="{Binding TotalLinesExcludingWhitespace}"></TextBlock>
		</Grid>
	</Border>
	
</UserControl>
